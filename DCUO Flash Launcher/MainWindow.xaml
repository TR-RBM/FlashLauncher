<Window x:Class="DCUO_Flash_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCUO_Flash_Launcher"
        mc:Ignorable="d"
        Title="Flash Launcher" Height="400" Width="500">


    <Grid x:Name="MainGrid">
        <Grid x:Name="Grid_AddAccount" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="177*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button x:Name="Button_AddAccount" Grid.Column="1" Content="add account" FontSize="10" Margin="0,354,0,0" Grid.RowSpan="2"/>
        </Grid>
    </Grid>
</Window>
